{
  "name": "vibe-code-adventure",
  "version": "1.0.0",
  "description": "A web app that recreates classic 80s/90s text adventures",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon",
    "server:prod": "ts-node server/index.ts",
    "client": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc server/index.ts --outDir ../dist/server",
    "build:client": "cd client && npm run build",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.3",
    "ts-jest": "^29.1.1"
  },
  "keywords": ["text-adventure", "game", "80s", "90s"],
  "author": "",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "server/**/*.ts",
      "!server/**/*.test.ts"
    ]
  }
}